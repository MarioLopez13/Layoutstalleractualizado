<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layouts.StackLayoutPage"
             Title="StackLayoutPage">
    <StackLayout>
    <ContentView>
        <StackLayout Orientation="Horizontal" Spacing="10">
            <BoxView Color="Red" WidthRequest="20" HeightRequest="20" />
            <Label Text="Rojo" TextColor="Black" VerticalOptions="Center" />
        </StackLayout>
    </ContentView>
    <ContentView>
        <StackLayout Orientation="Horizontal" Spacing="10">
            <BoxView Color="Black" WidthRequest="20" HeightRequest="20" />
            <Label Text="Negro" TextColor="Black" VerticalOptions="Center" />
        </StackLayout>
    </ContentView>
    <ContentView>
        <StackLayout Orientation="Horizontal" Spacing="10">
            <BoxView Color="Green" WidthRequest="20" HeightRequest="20" />
            <Label Text="Verde" TextColor="Black" VerticalOptions="Center" />
        </StackLayout>
    </ContentView>
    <Button Text="Go to FlexLayout"
                Clicked="GoToFlexLayout_Clicked" />
    </StackLayout>
</ContentPage>