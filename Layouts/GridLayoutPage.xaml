<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layouts.GridLayoutPage"
             Title="GridLayoutPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <BoxView Grid.Row="0" Grid.Column="0" BackgroundColor="Red" />
        <BoxView Grid.Row="0" Grid.Column="1" BackgroundColor="Blue" />
        <BoxView Grid.Row="1" Grid.Column="0" BackgroundColor="Green" />
        <Button Grid.Row="1" Grid.Column="1" Text="Go to StackLayout"
                Clicked="GoToStackLayout_Clicked" />
    </Grid>
</ContentPage>