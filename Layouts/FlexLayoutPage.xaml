<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layouts.FlexLayoutPage"
             Title="FlexLayoutPage">
    <FlexLayout Direction="Column">
            <ImageButton Source="imagen1.jpg" Clicked="OnImageTapped" WidthRequest="50" HeightRequest="50" Aspect="AspectFit"/>
            <Label Text="Texto 1" VerticalOptions="Center"/>
            <ImageButton Source="imagen2.jpg" Clicked="OnImageTapped" WidthRequest="50" HeightRequest="50" Aspect="AspectFit"/>
            <Label Text="Texto 2" VerticalOptions="Center"/>
            <Image Source="imagen3.jpg" WidthRequest="50" HeightRequest="50" Aspect="AspectFit"/>
            <Label Text="Texto 3" VerticalOptions="Center"/>
        <Button Text="Ir a AbsoluteLayout" Clicked="OnGoToAbsoluteLayoutClicked"/>
    </FlexLayout>
</ContentPage>